@model IEnumerable<SecondWeekWork.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <form>
        客戶名稱:
        @Html.TextBox("keyword")
    </form>

    <form>
        客戶分類
        @Html.DropDownList("level", new SelectList(
                  new List<Object>{
                       new { value = 3 , text = "請選擇"},
                       new { value = 0 , text = "高"  },
                       new { value = 1 , text = "中" },
                       new { value = 2 , text = "低"},
                    },
                  "value",
                  "text",
                   3))


        <input type="submit" , name="搜尋" />
    </form>
</p>
<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+客戶分類", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.客戶分類)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-客戶分類", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+客戶名稱", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.客戶名稱)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-客戶名稱", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+統一編號", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.統一編號)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-統一編號", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+電話", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.電話)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-電話", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+傳真", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.傳真)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-傳真", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+地址", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.地址)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-地址", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th>
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "+Email", keyword = ViewBag.keyword })">↑</a>
            @Html.DisplayNameFor(model => model.Email)
            <a href="@Url.Action("Index", "客戶資料", new { sortBy = "-Email", keyword = ViewBag.keyword })">↓</a>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@using PagedList
@using PagedList.Mvc

@Html.PagedListPager(Model as IPagedList, (p) => Url.Action("Index", new { ViewBag.sortBy, ViewBag.keyword, pageNo = p }))
